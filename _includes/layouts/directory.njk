---
layout: layouts/document.njk
---

{% set pages = collections.all | eleventyNavigation(title) %}

<h2 class="visually-hidden">Pages</h2>

<ul class="page-previews" style="margin-top: var(--space-xx-large);">
  {%- for entry in pages %}
    <li>
      <a href="{{ entry.url | url }}">
        <h3>{{ entry.title }}</h3>
        <p>{{ entry.description }}</p>
      </a>
    </li>
  {%- endfor %}
</ul>